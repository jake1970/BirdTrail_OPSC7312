<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    tools:context=".Card_Achievement"
    android:background="@drawable/palette_full_12"
    android:backgroundTint="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:background="@drawable/palette_half_12"
            android:backgroundTint="@color/medium_blue"
            android:layout_centerVertical="true"
            android:layout_weight="0"
            android:gravity="center"
            android:paddingLeft="6dp"
            >


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_gravity="center"
                android:id="@+id/imgBadge"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:srcCompat="@color/white"
                android:layout_marginLeft="8dp"
                android:layout_weight="0"
                android:layout_marginRight="14dp"
                />

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="0"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAchievementName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/imgmedal"
                    android:textColor="@color/black"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableLeft="@drawable/imgcalendar"
                    android:textColor="@color/black"
                    android:text="TextView" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvRequirements"
                android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="6dp"
                android:textSize="11dp"
                android:layout_height="wrap_content"
                android:textColor="@color/sub_grey"
                android:text="TextView" />

        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="4.6"
        android:background="@drawable/palette_half_12"
        android:backgroundTint="@color/confirmation_green"
        android:rotation="180"
        android:id="@+id/rlSelector"
        >


        <TextView
            android:id="@+id/tvSelectorText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="180"
            android:drawableTint="@color/white"
            android:drawableTop="@drawable/imgcheck"
            android:paddingTop="16dp"
            android:drawablePadding="-18dp"
            android:text="Applied"
            android:textSize="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingHorizontal="6dp"/>



    </RelativeLayout>




    </LinearLayout>


</RelativeLayout>