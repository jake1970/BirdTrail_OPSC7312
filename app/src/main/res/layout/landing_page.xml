<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingPage"
    android:background="@color/dark_blue">



    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/imgglobebird" />

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appNameNeat"
        android:textColor="@color/white"
        android:layout_below="@id/imgLogo"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvAppPurpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAppName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="@string/appPurpose"
        android:textColor="@color/white"
        android:textSize="14dp"
        tools:ignore="TextSizeCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignIn"
        android:layout_centerHorizontal="true"
        android:layout_width="315dp"
        android:layout_height="58dp"
        android:layout_below="@id/tvAppPurpose"
        android:layout_marginTop="54dp"
        app:cornerRadius="12dp"
        android:text="@string/signIn"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_blue"
        android:stateListAnimator="@null"
        app:strokeColor="@color/light_blue"
        app:strokeWidth="2dp"
        android:textSize="24dp"
        android:letterSpacing="0"
        android:textAllCaps="false"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignUp"
        android:layout_centerHorizontal="true"
        android:layout_width="315dp"
        android:layout_height="58dp"
        android:layout_below="@id/btnSignIn"
        android:layout_marginTop="10dp"
        app:cornerRadius="12dp"
        android:text="@string/signUp"
        android:textColor="@color/white"
        android:backgroundTint="@color/semi_transparent_white"
        android:stateListAnimator="@null"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp"
        android:textSize="24dp"
        android:letterSpacing="0"
        android:textAllCaps="false"
        />

</RelativeLayout>