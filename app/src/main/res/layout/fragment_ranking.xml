<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".Ranking">

    <!-- TODO: Update blank fragment layout -->
<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:text="@string/hello_blank_fragment" />-->

    <TextView
        android:id="@+id/tvRankings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ranking"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        android:textSize="25dp"/>

    <View
        android:layout_width="260dp"
        android:layout_height="3dp"
        android:background="#ECE6E6"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="125dp"/>

    <TextView
        android:id="@+id/tvLeaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leaderboard"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/white"
        android:textSize="18dp"/>

    <View
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="#ECE6E6"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="0dp"/>

    <TextView
        android:id="@+id/tvAchievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Achievements"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="255dp"
        android:textColor="@color/white"
        android:textSize="18dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivMyProfileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="-240dp"
        android:layout_weight="0"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:srcCompat="@tools:sample/avatars" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivMedal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-210dp"
        android:layout_weight="0"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/imgLeaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="15dp"
        android:tint="@android:color/white"
        android:src="@drawable/imgleaderboard"
        tools:ignore="UseAppTint" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{score}"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/white"
        android:textSize="18dp"/>

</FrameLayout>