<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".Ranking">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tvRankings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RankingLabel"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:textSize="25dp"/>

        <View
            android:id="@+id/vRankingsLine"
            android:layout_width="260dp"
            android:layout_height="3dp"
            android:background="#ECE6E6"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/tvRankings"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tvLeaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RankingLeaderboard"
            android:layout_below="@id/tvScore"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:textSize="18dp"/>

        <View
            android:layout_width="200dp"
            android:id="@+id/vLine"
            android:layout_height="2dp"
            android:background="#ECE6E6"
            android:layout_marginTop="222dp"
            android:layout_marginLeft="0dp"/>

        <TextView
            android:id="@+id/tvAchievements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivMyProfileImage"
            android:text="@string/RankingAchievements"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="255dp"
            android:textColor="@color/white"
            android:textSize="18dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivMyProfileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="260dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/vRankingsLine"
            android:layout_weight="0"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:srcCompat="@color/white" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivMedal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="80dp"
            android:layout_below="@id/vRankingsLine"
            android:layout_weight="0"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:srcCompat="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/imgLeaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRankings"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:tint="@android:color/white"
            android:src="@drawable/imgleaderboard"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/imgMedal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgLeaderboard"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:tint="@android:color/white"
            android:src="@drawable/imgmedal"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/tvMedals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RankingMedal"
            android:layout_below="@id/tvScore"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/white"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RankingScore"
            android:layout_below="@id/tvRankings"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/white"
            android:textSize="18dp"/>

        <ScrollView
            android:id="@+id/svRankings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/vLine"
            android:layout_marginTop="0dp"
            android:background="@color/light_blue"
            android:fadingEdgeLength="1dp"
            android:requiresFadingEdge="vertical"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:id="@+id/llRankingsList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical" />
        </ScrollView>



    </RelativeLayout>



</FrameLayout>