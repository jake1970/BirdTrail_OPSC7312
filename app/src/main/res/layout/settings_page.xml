<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue">


    <TextView
        android:id="@+id/tvSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        android:textSize="25dp"/>

    <View
        android:layout_width="280dp"
        android:layout_height="2dp"
        android:background="#ECE6E6"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="120dp"/>

    <TextView
        android:id="@+id/tvUnitsType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Units Type"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="35dp"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="35dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnMetric"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:text="Metric"
            android:textColor="@color/white"
            android:backgroundTint="@color/light_blue"
            />
        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/btnImperial"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:text="Imperial"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <TextView
        android:id="@+id/tvDefaultDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Distance"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="35dp"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="20dp"
        android:contentDescription="Default Distance"
        android:value="50.0"
        android:valueFrom="0.0"
        android:valueTo="50.0" />

    <TextView
        android:id="@+id/tvOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Options"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="37dp"
        android:textColor="@color/white"
        android:textSize="18dp"/>

    <View
        android:layout_width="290dp"
        android:layout_height="2dp"
        android:background="#ECE6E6"
        android:layout_marginTop="342dp"
        android:layout_marginLeft="110dp"/>

</RelativeLayout>