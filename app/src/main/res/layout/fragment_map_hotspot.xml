<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MapHotspot">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_blue"
        >

        <LinearLayout
            android:id="@+id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvHotspot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hotspotText"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="14dp"
                android:background="@drawable/palette_full_12"
                android:backgroundTint="@color/white" />


        </LinearLayout>


        <TextView
            android:id="@+id/tvHotspotDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llHeader"
            android:layout_marginHorizontal="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/imgcalendar"
            android:drawableTint="@color/white"
            android:text="{hotspot date}"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/imgMap"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@id/tvHotspotDate"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/palette_full_12"
            android:padding="4dp"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgMap"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/llButtonDisplay"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:insetTop="0dp"
                android:insetBottom="6dp"
                android:letterSpacing="0"
                android:stateListAnimator="@null"
                android:text="@string/backText"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:cornerRadius="14dp"
                />


            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="2"
                android:background="@drawable/palette_full_10"
                android:gravity="center_horizontal|center_vertical"
                android:text="Distance: {60km}"
                android:textColor="#222222" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDirections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:backgroundTint="@color/white"
                android:insetTop="0dp"
                android:insetBottom="6dp"
                android:letterSpacing="0"
                android:stateListAnimator="@null"
                android:text="Directions"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:cornerRadius="14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBirdInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llButtonDisplay"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Name"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvBirdName"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/palette_full_10"
                    android:gravity="center"
                    android:text="{name}"
                    android:drawableLeft="@drawable/imgbird"/>

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Count"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvBirdCount"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/palette_full_10"
                    android:gravity="center"
                    android:text="{count}"
                    android:drawableLeft="@drawable/imgcalendar"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/llBirdInfo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Location Name"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvBirdLocation"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/palette_full_10"
                android:gravity="center"
                android:text="{location}"
                android:drawableLeft="@drawable/imglocation_pin"/>
        </LinearLayout>


    </RelativeLayout>
</FrameLayout>