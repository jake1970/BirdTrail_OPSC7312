<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserObservations">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/dark_blue"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvObservations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:text="Observations"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#ECE6E6"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/tvObservations"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvObservations"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="55dp"
            android:layout_weight="1"
            android:background="@drawable/palette_full_12"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/imgsearch"
            android:hint="Search"
            android:inputType="text"
            android:padding="4dp"
            android:text=""
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:id = "@+id/vLine"
            android:background="#ECE6E6"
            android:layout_marginTop="-565dp"
            android:layout_below="@id/llSightings"
            android:layout_marginRight="210dp"
            android:layout_marginLeft="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id = "@+id/llSightings"
            android:layout_below="@id/etSearch"
            android:layout_marginBottom="565dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSightings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:text="All Sightings"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvSpecies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="20dp"
                android:text="Species"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/etSearch"
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="85dp"
            android:backgroundTint ="@color/white"
            android:src="@drawable/imgfilter" />

        <ScrollView
            android:id="@+id/svBirdList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/vLine"
            android:layout_marginTop="0dp"
            android:background="@color/light_blue"
            android:fadingEdgeLength="1dp"
            android:requiresFadingEdge="vertical"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:id="@+id/llBirdList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical" />
        </ScrollView>


    </RelativeLayout>

</FrameLayout>